<% title "Datasets" %>
<div class="grid_8">
	<p>
    <%= link_to 'New', new_admin_dataset_path %> |
    <%= link_to 'Import', new_upload_admin_datasets_path %> |
    <%= link_to 'Publish', new_admin_dataset_path %>
  </p>
  <div class="box">
    <h2>Browse</h2>
    <div class="block" id="tables">
      <table>
				<thead>
				  <tr>
				    <th>Title</th>
				    <th>No. Records</th>
				    <th>Catalog</th>
				    <th>Updated</th>
				    <th></th>
				  </tr>
				</thead>
				<% @datasets.each do |ds| %>
				<tr>
				  <td><%= link_to ds.title, admin_dataset_path(ds.identifier) %></td>
				  <td><%= ds.model.count %></td>
				  <td><%= ds.catalog.title %></td>
				  <td><%= ds.updated_at.to_s(:full) %></td>
				  <td><%= link_to 'edit', edit_admin_dataset_path(ds.identifier) %></td>
				</tr>
				<% end %>
      </table>
    </div>
  </div>
</div>
