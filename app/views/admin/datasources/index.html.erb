<% title "Data Sources" %>
<div class="grid_12">
	<p><%= link_to 'Add Data Source', new_admin_datasource_path %></p>
	<hr/>
</div>
<div class="grid_8">
	<div class="block" id="tables">
	  <table>
			<thead>
			  <tr>
			    <th>Title</th>
			    <th>Source Type</th>
			    <th>Parser</th>
			    <th>Class</th>
			    <th>Updated</th>
			  </tr>
			</thead>
			<% @datasources.each do |ds| %>
				<tr>
				  <td><%= link_to ds.title, admin_datasource_path(ds.id) %></td>
				  <td><%= ds.source_type.titleize %></td>
				  <td><%= ds.parser.titleize %></td>
				  <td>
				    <% if ds.rdfs_class && ds.rdfs_class.exists? %>
				    <%= link_to ds.rdfs_class.label, admin_schema_collection_class_path(rdf_id(ds.rdfs_class.skos_concept.collection), rdf_id(ds.rdfs_class)) %>
				    <% end %>
				  </td>
				  <td><%= ds.updated_at.to_s(:full) %></td>
				</tr>
			<% end %>
	  </table>
	</div>
</div>

<div class="grid_4">
	<div class="box articles">
		<div class="block" id="articles">
			<div class="first article">
				<h3>Content Sources</h3>
				<p class="meta">Upload and publish data sets</p>
			</div>
		</div>
	</div>
</div>
