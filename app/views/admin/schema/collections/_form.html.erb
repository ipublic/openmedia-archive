 <div class="grid_8">
   <div class="box">
		<div id="forms">
		<%= form_for :collection, 
		      :url => @collection.exists? ? admin_schema_collection_path(rdf_id(@collection)) : admin_schema_collections_path, 
		      :html => {:method=>@collection.exists? ? :put : :post } do |f| %>
			<%= f.error_messages %>
			<fieldset class="omega">
				<ol>
				  <li><%= f.label :label, 'Name', :class => "standard" %> <%= f.text_field :label, :class => "standard" %></li>
				  <li><%= f.label :definition, 'Description', :class => "standard" %> <%= f.text_area :definition, :rows => 5, :class => "wide" %></li>
			    <fieldset>
			      <legend>Options</legend>
			      <ol>
							<li><%= f.check_box :hidden, {:class => 'checkbox'} %> <%= f.label :hidden, 'Hidden?' %></li>
			      </ol>
			    </fieldset>
				</ol>
			</fieldset>
			<fieldset class="submit omega">
				<ol>
					<li><%= f.submit "Save", :class => "submit"%> <%= link_to 'Back',  :back %></li> 
				</ol>
			</fieldset>
		  <% end %>	
     </div>
  </div>
</div>

