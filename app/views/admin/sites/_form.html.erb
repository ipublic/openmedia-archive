<div id="forms">
	<%= form_for :site, :url => admin_site_path, :html=>{:method=>:put} do |f| %>
		<div class="grid_8">
			<div class="box">
				<div class="block">
				  <%= f.error_messages %>
					<%= f.hidden_field :rev, :value => @site['_rev'] if @site['_rev'] %>
					<fieldset>
						<legend>Site Information</legend>
						<ol>
						  <li><%= f.label :openmedia_name, 'Name' %> <%= f.text_field :openmedia_name, :class => "wide" %></li>
						  <li><%= f.label :welcome_message %> <%= f.text_area :welcome_message, :rows => 3 %></li>
						  <li><%= f.label :terms_of_use %> <%= f.text_area :terms_of_use, :rows => 5 %></li>
						  <li><%= f.label :url, 'URL' %> <%= f.text_field :url, :class => "wide" %></li>

						  <li><%= f.label :adminstrator_contact_id, 'Admin Contact' %> 
								 <%= f.select :adminstrator_contact_uri, vcard_collection, {:prompt => 'Select contact'}  %></li>
						  <li><%= f.label :business_contact_id, 'Business Contact' %> 
								 <%= f.select :business_contact_uri, vcard_collection, {:prompt => 'Select contact'}  %></li>
							</ol>
					</fieldset>

					<fieldset>
						<legend>Municipality</legend>
						<%= render :partial => 'admin/named_places/form', :locals => {:f => f, 
						                                                              :attribute_name => :municipality,
						                                                              :named_place=>@site.municipality}  %>
					</fieldset>
					
					<fieldset>
						<legend>OpenMedia Servers</legend>
						<ol>
						  <li><%= f.label :internal_couchdb_server_uri, 'Internal server URI' %> <%= f.text_field :internal_couchdb_server_uri, :class => "wide" %></li>
						  <li><%= f.label :public_couchdb_server_uri, 'Public server URI' %> <%= f.text_field :public_couchdb_server_uri, :class => "wide" %></li>
						</ol>
					</fieldset>

					<fieldset class="omega">
						<legend>Services</legend>
						<ol>
					  	<li><%= f.label :googlemap_api_key, 'GoogleMap API Key' %> <%= f.text_area :googlemap_api_key, :rows => 3, :class => "wide" %></li>
						</ol>
					</fieldset>
					<fieldset class="submit">
						<ol>
							<li><%= f.submit "Save", {:class => "submit"} %> <%= link_to 'Back',  :back %></li> 
						</ol>
					</fieldset>
				</div>
			</div>
		</div>
	<% end %>	
</div>
