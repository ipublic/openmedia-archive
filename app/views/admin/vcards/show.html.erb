<% title "Contact #{vcard_formatted_name(@vcard)}" %>

<div class="grid_12" >
  <p style="float: right">
    <%= link_to "Browse", admin_vcards_path %> | 
    <%= link_to "Edit", edit_admin_vcard_path(rdf_id(@vcard)) %> |
    <%= link_to 'Delete', admin_vcard_path(rdf_id(@vcard)), 
	:confirm => "Are you sure you want to delete this contact: #{vcard_formatted_name(@vcard)}?", 
        :method => :delete %>
  </p>
  <hr />
</div>

<div class="grid_12" >
  <div class="box">
    <h2><%= vcard_formatted_name(@vcard) %></h2>
    <div class="block">
      <%= show_fields(@vcard, [:prefix, :given_name, :extended_name, :family_name]).html_safe %>
    </div>
  </div>
</div>
