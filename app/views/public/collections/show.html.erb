<% title "#{@collection.label} Datasets" %>
<div class="grid_12">
  <div class="box">
    <h2>Browse</h2>
    <div class="block" id="tables">
      <table>
				<thead>
				  <tr>
				    <th>Name</th>
				    <th>No. Properties</th>
				    <th>No. Records</th>
				  </tr>
				</thead>
				<% @classes.each do |cls| %>
				<tr>
				  <td><%= link_to cls.label, public_class_path(rdf_id(cls)) %></td>
				  <td><%= cls.properties.size %></td>
				  <td><%= cls.instance_count %></td>
				</tr>
				<% end %>
      </table>
    </div>
  </div>
</div>
