<% title "Schema > Class > #{@class_def['label']}" %>

<div class="grid_12" >
  <p class="page-nav">
    <%= link_to "All Classes", schema_collection_path(rdf_id(@collection)) %> | 
    <%= link_to "Edit", edit_schema_collection_class_path(rdf_id(@collection), rdf_id(@class_uri)) %> |
    <%= link_to 'Delete', schema_collection_class_path(rdf_id(@collection), rdf_id(@class_uri)), 
	:confirm => "Are you sure you want to delete this class and all of its data?", 
        :method => :delete %>
  </p>
  <hr />
</div>

<div class="grid_12" >
  <div class="box">
    <h2><%= @class_def['identifier'] %></h2>
    <div class="block">
      <%= show_fields(@class_def, [:label, :comment, :uri, :created, :modified]).html_safe %>
    </div>
  </div>
</div>

<div class="grid_12">
  <div class="box" id="tables">
    <h2>Properties</h2>
    <div class="block">
      <table>
	<thead>
	  <tr>
	    <th>Property Name</th>
	    <th>Property Type</th>
	    <th>Description</th>
	  </tr>
	</thead>
	<tbody>
	  <% @class_def['properties'].sort {|p1,p2| p1['label'] <=> p2['label']}.each do |property| %>
	  <tr>
	    <td><%= property['label'] %></td>
	    <td><span class="tooltip" title="<%=property['range']%>"><%= short_uri(property['range']) %></span></td>
	    <td><%= property['comment'] %></td>
	  </tr>
	  <% end %>
	</tbody>
      </table>
    </div>
  </div>
</div>
